    "@types/node": "^20.17.14",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.7.0",
